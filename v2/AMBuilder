import os

### CLI
binary = builder.compiler.Program('spcomp')
binary.compiler.cxxincludes += [
  os.path.join(builder.sourcePath, 'include'),
]

if binary.compiler.cxx.behavior is 'msvc':
  binary.compiler.postlink += ['/SUBSYSTEM:CONSOLE']

binary.sources += [
  'ast-printer.cpp',
  'compile-context.cpp',
  'constant-evaluator.cpp',
  'float-value.cpp',
  'int-value.cpp',
  'json-printer.cpp',
  'keyword-table.cpp',
  'lexer.cpp',
  'macro-lexer.cpp',
  'name-binding.cpp',
  'parser.cpp',
  'pool-allocator.cpp',
  'preprocessor.cpp',
  'scopes.cpp',
  'semantic-analysis.cpp',
  'smx-builder.cpp',
  'source-manager.cpp',
  'symbols.cpp',
  'reporting.cpp',
  'tk-evaluator.cpp',
  'type-manager.cpp',
  'type-resolver.cpp',
  'types.cpp',
  'main.cpp',
]
builder.Add(binary)

