import os
import sys

builder.SetBuildFolder('testing')

Scripts = [
  'test-compiler',
  'test-runtime',
  'test-all',
]

def fixup_path(mode, path):
  if builder.target.platform == 'windows':
    if mode == '.sh':
      return path.replace('\\', '\\\\')
  return path

def gen_scripts(ext):
  for arch in Root.archs:
    for script in Scripts:
      Inputs = [
        os.path.join(builder.currentSourcePath, 'generate_scripts.py'),
        script + ext + '.in',
      ]
      Outputs = [
        script + '.' + arch + ext,
      ]
  
      builder.AddCommand(
        inputs = Inputs,
        argv = [
          sys.executable,
          os.path.join(builder.currentSourcePath, 'generate_scripts.py'),
          fixup_path(ext, builder.sourcePath),
          fixup_path(ext, builder.buildPath),
          os.path.join(builder.currentSourcePath, script + ext + '.in'),
          os.path.join(builder.buildPath, 'testing', script + '.' + arch + ext),
          fixup_path(ext, os.path.join(builder.buildPath, SP.spcomp[arch].binary.path)),
          fixup_path(ext, os.path.join(builder.buildPath, SP.spshell[arch].binary.path)),
          arch,
        ],
        outputs = Outputs
      )
gen_scripts('.sh')
gen_scripts('.bat')
